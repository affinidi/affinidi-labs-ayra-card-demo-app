# VC-AuthN OIDC Bridge Configuration

# Server Configuration
PORT=5001
NODE_ENV=development
SESSION_SECRET=generate-a-secure-random-secret-here

# OIDC Provider Settings
ISSUER_URL=http://localhost:5001
CONTROLLER_URL=http://localhost:5001

# Keycloak Client Configuration (Get from Keycloak after setup)
KEYCLOAK_CLIENT_ID=vc-authn
KEYCLOAK_CLIENT_SECRET=vc-authn-secret-change-me
KEYCLOAK_REDIRECT_URI=http://localhost:8880/realms/ayra-demo/broker/vc-authn/endpoint

# Dart Verifier Server Configuration (Uses existing verifier-portal)
VERIFIER_SERVER_URL=http://verifier-portal:8081
VERIFIER_CLIENT_ID=federatedlogin
VERIFIER_AUTH_TOKEN=my_secure_token

# JWT Signing
JWT_ALGORITHM=RS256
SUBJECT_ID_HASH_SALT=change-this-random-salt-in-production

# Session Storage (in-memory for simplicity, use Redis for production)
SESSION_STORE=memory

# Logging
LOG_LEVEL=debug
