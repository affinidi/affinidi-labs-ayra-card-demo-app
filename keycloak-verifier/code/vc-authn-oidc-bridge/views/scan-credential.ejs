<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Ayra Secure Authentication</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 50%, #0f172a 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        /* Animated background elements */
        .bg-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.4;
            animation: float 20s ease-in-out infinite;
        }

        .bg-orb-1 {
            width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            top: -100px;
            left: -100px;
        }

        .bg-orb-2 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #06b6d4, #3b82f6);
            bottom: -50px;
            right: -50px;
            animation-delay: -10s;
        }

        .bg-orb-3 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #8b5cf6, #ec4899);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation-delay: -5s;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -30px) scale(1.05); }
            66% { transform: translate(-20px, 20px) scale(0.95); }
        }

        /* Main container */
        .main-container {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 1100px;
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            gap: 30px;
            align-items: stretch;
        }

        @media (max-width: 900px) {
            .main-container {
                grid-template-columns: 1fr;
                max-width: 500px;
            }
        }

        /* QR Card */
        .qr-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 24px;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(20px);
        }

        .qr-card-header {
            margin-bottom: 25px;
        }

        .logo-badge {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, #1e3a8a, #3b82f6);
            padding: 8px 16px;
            border-radius: 50px;
            margin-bottom: 20px;
        }

        .logo-badge img {
            width: 28px;
            height: 28px;
        }

        .logo-badge span {
            color: white;
            font-weight: 600;
            font-size: 14px;
        }

        .qr-card h1 {
            color: #0f172a;
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .qr-card .subtitle {
            color: #64748b;
            font-size: 15px;
            font-weight: 500;
        }

        /* QR Code Container */
        .qr-wrapper {
            position: relative;
            background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
            border-radius: 20px;
            padding: 30px;
            margin: 25px 0;
        }

        .qr-wrapper::before {
            content: '';
            position: absolute;
            inset: 3px;
            background: white;
            border-radius: 17px;
        }

        .qr-code-container {
            position: relative;
            z-index: 1;
        }

        .qr-code {
            width: 100%;
            max-width: 220px;
            height: auto;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(59, 130, 246, 0.2);
        }

        .scan-indicator {
            position: absolute;
            inset: 0;
            border: 3px solid transparent;
            border-radius: 12px;
            animation: scan-pulse 2s ease-in-out infinite;
        }

        @keyframes scan-pulse {
            0%, 100% { border-color: rgba(59, 130, 246, 0.3); }
            50% { border-color: rgba(59, 130, 246, 0.8); }
        }

        /* Status Display */
        .status-display {
            padding: 16px 24px;
            border-radius: 14px;
            margin: 20px 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-weight: 500;
            transition: all 0.4s ease;
        }

        .status-display.waiting {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border: 1px solid #fcd34d;
        }

        .status-display.success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .status-display.error {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .spinner-ring {
            width: 24px;
            height: 24px;
            border: 3px solid currentColor;
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Open Wallet Button */
        .wallet-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            color: white;
            border: none;
            padding: 14px 32px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
            width: 100%;
            max-width: 280px;
        }

        .wallet-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.5);
        }

        .wallet-btn:active {
            transform: translateY(0);
        }

        /* Info Card */
        .info-card {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 35px;
            backdrop-filter: blur(20px);
            color: white;
            display: flex;
            flex-direction: column;
        }

        .info-header {
            margin-bottom: 30px;
        }

        .info-header h2 {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 8px;
            background: linear-gradient(135deg, #60a5fa, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .info-header p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 14px;
        }

        /* Steps */
        .steps-container {
            flex: 1;
        }

        .step {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            padding: 16px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        }

        .step:last-child {
            border-bottom: none;
        }

        .step-number {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 16px;
            flex-shrink: 0;
        }

        .step-content h4 {
            font-size: 15px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .step-content p {
            font-size: 13px;
            color: rgba(255, 255, 255, 0.6);
            line-height: 1.5;
        }

        /* Security Badges */
        .security-section {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .security-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .security-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 14px;
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 8px;
            font-size: 12px;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9);
        }

        .security-badge.verified {
            background: rgba(34, 197, 94, 0.15);
            border-color: rgba(34, 197, 94, 0.3);
            color: #86efac;
        }

        /* Features Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
            margin-top: 20px;
        }

        .feature-item {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 14px;
            text-align: center;
        }

        .feature-icon {
            font-size: 24px;
            margin-bottom: 8px;
        }

        .feature-item span {
            font-size: 12px;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 500;
        }

        /* Footer */
        .footer {
            position: relative;
            z-index: 10;
            margin-top: 30px;
            text-align: center;
            color: rgba(255, 255, 255, 0.4);
            font-size: 12px;
        }

        .footer span {
            background: rgba(255, 255, 255, 0.1);
            padding: 6px 12px;
            border-radius: 6px;
            font-family: monospace;
        }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            .qr-card, .info-card {
                padding: 25px;
            }

            .qr-card h1 {
                font-size: 22px;
            }

            .features-grid {
                grid-template-columns: 1fr 1fr;
            }
        }

        /* Success animation */
        .success-checkmark {
            width: 60px;
            height: 60px;
            margin: 0 auto 15px;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            animation: pop-in 0.3s ease;
        }

        .success-checkmark svg {
            width: 30px;
            height: 30px;
            stroke: white;
            stroke-width: 3;
        }

        @keyframes pop-in {
            0% { transform: scale(0); }
            70% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <!-- Background orbs -->
    <div class="bg-orb bg-orb-1"></div>
    <div class="bg-orb bg-orb-2"></div>
    <div class="bg-orb bg-orb-3"></div>

    <div class="main-container">
        <!-- QR Code Card -->
        <div class="qr-card">
            <div class="qr-card-header">
                <div class="logo-badge">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        <path d="M9 12l2 2 4-4"/>
                    </svg>
                    <span>Secure Login</span>
                </div>
                <h1><%= title %></h1>
                <p class="subtitle"><%= clientName %></p>
            </div>

            <div class="success-checkmark" id="successCheck">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>

            <div class="qr-wrapper" id="qrWrapper">
                <div class="qr-code-container">
                    <img src="<%= qrCodeDataUrl %>" alt="QR Code" class="qr-code" />
                    <div class="scan-indicator"></div>
                </div>
            </div>

            <div class="status-display waiting" id="status">
                <div class="spinner-ring"></div>
                <span>Waiting for credential scan...</span>
            </div>

            <button class="wallet-btn" onclick="openWallet()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="6" width="20" height="14" rx="2"/>
                    <path d="M2 10h20"/>
                    <circle cx="18" cy="14" r="2"/>
                </svg>
                Open Wallet App
            </button>
        </div>

        <!-- Info Card -->
        <div class="info-card">
            <div class="info-header">
                <h2>üîê Passwordless Authentication</h2>
                <p>Login securely using your Verifiable Credentials - no passwords needed</p>
            </div>

            <div class="steps-container">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4>Open Your Digital Wallet</h4>
                        <p>Launch the Ayra Wallet or any compatible wallet app on your phone</p>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4>Scan the QR Code</h4>
                        <p>Use the wallet's scanner to capture the secure authentication request</p>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4>Review & Approve</h4>
                        <p>Check the requested credentials and approve sharing your verified identity</p>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h4>You're Logged In!</h4>
                        <p>Automatic redirect once your credentials are verified</p>
                    </div>
                </div>
            </div>

            <div class="features-grid">
                <div class="feature-item">
                    <div class="feature-icon">üîí</div>
                    <span>No Passwords</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">‚ö°</div>
                    <span>Instant Login</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">üõ°Ô∏è</div>
                    <span>Privacy Protected</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">‚úÖ</div>
                    <span>Cryptographically Verified</span>
                </div>
            </div>

            <div class="security-section">
                <div class="security-badges">
                    <span class="security-badge verified">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        </svg>
                        End-to-End Encrypted
                    </span>
                    <span class="security-badge">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                        </svg>
                        W3C Standard
                    </span>
                    <span class="security-badge">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/>
                        </svg>
                        Decentralized ID
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        Session: <span><%= sessionId.substring(0, 8) %>...</span>
    </div>

    <script>
        const socket = io();
        const sessionId = '<%= sessionId %>';
        const callbackUrl = '<%= callbackUrl %>';
        const oobUrl = '<%= oobUrl %>';

        // Join session room
        socket.emit('join', sessionId);

        // Listen for verification updates
        socket.on('verified', (data) => {
            const statusDiv = document.getElementById('status');
            const qrWrapper = document.getElementById('qrWrapper');
            const successCheck = document.getElementById('successCheck');

            if (data.success) {
                statusDiv.className = 'status-display success';
                statusDiv.innerHTML = '<span>‚úì Credentials Verified Successfully!</span>';

                // Show success animation
                qrWrapper.style.display = 'none';
                successCheck.style.display = 'flex';

                // Redirect to callback
                setTimeout(() => {
                    statusDiv.innerHTML = '<span>Redirecting to application...</span>';
                    window.location.href = callbackUrl;
                }, 2000);
            } else {
                statusDiv.className = 'status-display error';
                statusDiv.innerHTML = '<span>‚úó Verification Failed: ' + data.message + '</span>';
            }
        });

        function openWallet() {
            // Try to open wallet app via deep link
            window.location.href = oobUrl;
        }

        // Auto-refresh QR code after 5 minutes
        setTimeout(() => {
            location.reload();
        }, 300000);
    </script>
</body>
</html>
