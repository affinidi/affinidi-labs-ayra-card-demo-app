<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">

    <!-- Header -->
    <header class="sticky top-0 z-50 bg-white border-b shadow-sm">
        <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-blue-600 tracking-tight hover:opacity-80">
                Trust Registry (TRQP)
            </a>

        </div>
    </header>

    <!-- Page Content -->
    <main class="flex-1">
        {{{ body }}}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-12">
        <div class="max-w-6xl mx-auto px-4 py-10 grid grid-cols-1 sm:grid-cols-3 gap-8">
            <!-- Brand -->
            <div>
                <h2 class="text-xl font-bold text-white mb-3">Trust Registry UI</h2>
                <p class="text-sm opacity-80">
                    A modern UI to manage organizations and trust metadata.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase mb-3">Quick Links</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/" class="hover:text-white transition">Home</a></li>
                </ul>
            </div>

            <!-- Social -->
            <div>
                <h3 class="text-sm font-semibold text-white uppercase mb-3">Follow Us</h3>
                <div class="flex space-x-4">
                    <a href="#" class="hover:text-white transition">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M22.46 6..." />
                        </svg>
                    </a>
                    <a href="#" class="hover:text-white transition">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.04..." />
                        </svg>
                    </a>
                    <a href="#" class="hover:text-white transition">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M21.35..." />
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-700 mt-6">
            <p class="text-center text-xs py-4 text-gray-500">
                © {{year}} Trust Registry UI. All rights reserved.
            </p>
        </div>
    </footer>

</body>

</html>